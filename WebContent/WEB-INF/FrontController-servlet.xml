<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
  
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">  
	
	
	
	
	<context:component-scan base-package="com.cts.*" />
    <context:annotation-config />
	
	<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/jsp/"/>
		<property name="suffix" value=".jsp"/>
	</bean>
	
<bean id="bookService" class="com.cts.service.BookServiceImpl" />
    
    <bean id="bookDao" class="com.cts.Dao.BookDaoImpl" >
    <property name="jdbcTemplate" ref="jt"></property>    
</bean>


    
    
     <bean id="userService" class="com.cts.service.UserServiceImpl" />
    <bean id="userDao" class="com.cts.Dao.UserDaoImpl" />
     
     <bean id="jt" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="ds" />
    </bean>
    
    
<bean id="ds" class="org.springframework.jdbc.datasource.DriverManagerDataSource">    
<property name="driverClassName" value="com.mysql.jdbc.Driver"></property>    
<property name="url" value="jdbc:mysql://localhost:3306/BookMangement"></property>    
<property name="username" value="root"></property>    
<property name="password" value="root"></property>    
</bean>    
</beans>